apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: {{ cert_manager_issuer_name_prod }}
spec:
  acme:
    email: {{ cert_manager_issuer_email | quote }}
    server: https://acme-v02.api.letsencrypt.org/directory
    privateKeySecretRef:
      name: acme-account-key
    solvers:
      - dns01:
          cloudflare:
            apiTokenSecretRef:
              name: {{ cert_manager_cf_secret_name }}
              key: api-token
